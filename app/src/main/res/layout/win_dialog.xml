<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_win"
    android:clickable="true"
    android:focusable="true"
    android:onClick="onClick">

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:background="?android:selectableItemBackgroundBorderless"
        android:onClick="onClick"
        android:clickable="true"
        android:focusable="true"
        android:layout_margin="10dp"
        app:srcCompat="@drawable/ic_close" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/winLayout"
        android:text="CONGRATULATIONS"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:layout_marginBottom="10dp"/>

    <RelativeLayout
        android:id="@+id/winLayout"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="@drawable/selector_lines_win_dialog_bg">
        <TextView
            android:id="@+id/tvCongratulationsDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_margin="20dp"
            android:textSize="20sp"
            android:text="17.11.2020 14:09"/>
        <TextView
            android:id="@+id/tvCongratulationsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_margin="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textSize="20sp"
            android:text="Nickname"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/ivShare"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/share"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onClick"/>
</RelativeLayout>